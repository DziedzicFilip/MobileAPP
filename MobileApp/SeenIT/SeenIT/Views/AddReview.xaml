<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SeenIT.Views.AddReview"
             Title="Dodaj recenzję">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="15">
            <Label Text="Dodaj recenzję" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

            <Label Text="Treść recenzji:" />
            <Editor Placeholder="Wpisz treść recenzji"
                    HeightRequest="100"
                    Text="{Binding Tresc, Mode=TwoWay}" />

            <Label Text="Ocena (1-10):" />
            <Entry Placeholder="Ocena"
                   Keyboard="Numeric"
                   Text="{Binding Ocena, Mode=TwoWay}" />

            <Label Text="Data:" />
            <DatePicker Date="{Binding Data, Mode=TwoWay}" />

            <Button Text="Dodaj recenzję"
        Command="{Binding SaveCommand}"
        BackgroundColor="#2196F3"
        TextColor="White"
        CornerRadius="8"
        HeightRequest="50" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>