<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SeenIT.Views.ListPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
            <Color x:Key="Primary">#0078D7</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Górny panel -->
        <StackLayout BackgroundColor="{StaticResource Accent}" VerticalOptions="FillAndExpand" HorizontalOptions="Fill">
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center">
            </StackLayout>
        </StackLayout>

        <!-- Główna zawartość -->
        <ScrollView Grid.Row="1">
          
        </ScrollView>

        <!-- Dolny panel -->
        <StackLayout Grid.Row="2" Orientation="Horizontal" BackgroundColor="{StaticResource Accent}" Padding="10" HorizontalOptions="FillAndExpand">
            <Button Text="Home" Command="{Binding HomeCommand}" HorizontalOptions="CenterAndExpand" />
            <Button Text="MyList" Command="{Binding ListCommand}" HorizontalOptions="CenterAndExpand" />
            <Button Text="Profile" Command="{Binding ProfileCommand}" HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </Grid>
</ContentPage>